# Docker Compose Environment Variables
# Copy this file to .env and update with your actual values

# MySQL Configuration
MYSQL_ROOT_PASSWORD=root_password_change_me
MYSQL_DATABASE=tornado
MYSQL_USER=tornado-monitor
MYSQL_PASSWORD=tornado_password_change_me
MYSQL_PORT=3306

# Application Environment
NODE_ENV=production
TZ=UTC

# Note: The application configuration (API URLs, Telegram tokens, etc.)
# should be set in config.json which will be mounted into the container.
# The database host in config.json should be set to "mysql" (the service name)
# instead of "localhost" when running in Docker.
